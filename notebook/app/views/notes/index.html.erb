<p>
    <%= link_to 'Créer une nouvelle note', new_note_url %>
</p>

<ul class='notes'>
<% @notes.each do |note| %>
    <li>
        <%= link_to note.title, note_url(note) %>
        <%= link_to 'Édit', edit_note_url(note) %>
        <%= link_to 'Supprimer', note_url(note), method: :delete %>
    </li>
<% end %>
</ul>